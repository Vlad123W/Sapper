<Window x:Class="saper1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sapper" Height="745" Width="755" ResizeMode="NoResize" WindowStyle="None"
        Background="#121212" Foreground="White" BorderBrush="Transparent"
        AllowsTransparency="True" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Storyboard x:Key="RevealCellAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                         From="0.8" To="1" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                         From="0.8" To="1" Duration="0:0:0.2"/>
        </Storyboard>

        <Storyboard x:Key="OpenSettingsAnimation">
            <DoubleAnimation Storyboard.TargetName="SettingsPanel" 
                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                         From="-300" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="Overlay"
                         Storyboard.TargetProperty="Opacity"
                         From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>

        <Storyboard x:Key="CloseSettingsAnimation">
            <DoubleAnimation Storyboard.TargetName="SettingsPanel"
                         Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                         From="0" To="-320" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="Overlay"
                         Storyboard.TargetProperty="Opacity"
                         From="1" To="0" Duration="0:0:0.3"/>
        </Storyboard>
    </Window.Resources>


    <Grid x:Name="MainContainer">
        <Border x:Name="Main" Background="{StaticResource PlayfieldBackground}" BorderBrush="{StaticResource MainBorderBrush}" BorderThickness="5">
            <Grid>
                <Grid Height="50" VerticalAlignment="Top" Background="Transparent" MouseDown="Exit_MouseDown">
                    <Button x:Name="exit_btn" Style="{StaticResource RoundButton}" Click="exit_btn_Click" Margin="0,5,15,0" HorizontalAlignment="Right" Content="✕" Background="#00000000"/>

                    <Button x:Name="settingsButton" Style="{StaticResource RoundButton}" Content="⚙" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top" FontSize="23" Click="settingsButton_Click"/>

                    <Button x:Name="refreshButton" Style="{StaticResource RoundButton}" Content="🗘" HorizontalAlignment="Left" Margin="613,5,0,0" VerticalAlignment="Top" Click="refreshButton_Click"/>
                    <TextBlock x:Name="Time" HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="84" FontSize="18" TextAlignment="Center" Text="00:00"/>
                </Grid>

                <Grid x:Name="playField" Height="650" Width="650" Margin="0,50,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ShowGridLines="False">
                    <Grid.Resources>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="32.5"/>
                        </Style>
                        <Style TargetType="RowDefinition">
                            <Setter Property="Height" Value="32.5"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                </Grid>

                <Border x:Name="Overlay" Background="#80000000" Opacity="0" Visibility="Collapsed"/>

                <Border x:Name="SettingsPanel"
                        HorizontalAlignment="Left"
                        Width="300"
                        Background="{StaticResource PlayfieldBackground}"
                        CornerRadius="0,10,10,0"
                        RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <TranslateTransform X="-305"/>
                    </Border.RenderTransform>
                    <Grid>
                        <Button x:Name="closeSettingsButton" 
                                Content="✕" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top" 
                                Style="{DynamicResource RoundButton}" 
                                FontSize="23" 
                                Click="closeSettingsButton_Click"
                                Margin="15,5,0,0"/>

                        <StackPanel Margin="15,70,15,15">
                            <TextBlock Text="Налаштування" FontSize="28" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>
                            <TextBlock Text="Складність:" Margin="0,10"/>
                            <ComboBox SelectedIndex="0" x:Name="difficultyComboBox">
                                <ComboBoxItem>Новачок</ComboBoxItem>
                                <ComboBoxItem>Любитель</ComboBoxItem>
                                <ComboBoxItem>Професіонал</ComboBoxItem>
                            </ComboBox>
                            <TextBlock Text="Тема:" Margin="0,20,0,10"/>
                            <ComboBox SelectedIndex="0" x:Name="themeComboBox">
                                <ComboBoxItem>Темна</ComboBoxItem>
                                <ComboBoxItem>Світла</ComboBoxItem>
                            </ComboBox>

                            <Button x:Name="confirmButton" 
                                    Content="Підтвердити" 
                                    Style="{StaticResource ConfirmButton}"
                                    Margin="0,40,0,0"
                                    Click="confirmButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>